{
  "name": "bastion-trials-platform",
  "version": "1.0.0",
  "description": "GitHub for Clinical Trials - ProofOS Bastion Platform",
  "main": "index.js",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:frontend": "turbo dev --filter=@bastion/web",
    "lint": "turbo lint",
    "test": "turbo test",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "k8s:deploy": "kubectl apply -f k8s/",
    "terraform:plan": "cd terraform && terraform plan",
    "terraform:apply": "cd terraform && terraform apply"
  },
  "keywords": [
    "clinical-trials",
    "protocol-as-code",
    "digital-twin",
    "simulation",
    "audit",
    "blockchain",
    "healthcare"
  ],
  "author": "ProofOS Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "packageManager": "npm@10.0.0",
  "devDependencies": {
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "tailwindcss-themer": "^4.1.1",
    "ts-node": "^10.9.2",
    "turbo": "^2.0.0",
    "typescript": "^5.9.2"
  },
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "antd": "^5.26.7",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "framer-motion": "^12.23.12",
    "tailwind-merge": "^3.3.1"
  }
}
